# =============================================================================
# EXPENSE ANALYSER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# This template contains all required and optional configuration variables

# =============================================================================
# AUTH0 AUTHENTICATION (REQUIRED)
# =============================================================================
# Get these values from your Auth0 Dashboard (Applications > Your App)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_API_AUDIENCE=your-api-identifier

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
POSTGRES_USER=expense_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=expense_db
DATABASE_URL=postgresql://expense_user:your_secure_password_here@localhost:5432/expense_db

# =============================================================================
# API CONFIGURATION (REQUIRED)
# =============================================================================
API_SECRET_KEY=your_secret_key_here_min_32_chars
ENVIRONMENT=development

# =============================================================================
# REDIS CACHE (OPTIONAL - defaults to localhost:6379)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# LLM PROVIDERS (AT LEAST ONE REQUIRED)
# =============================================================================
# Google Gemini (Recommended - free tier available)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# Default LLM provider (gemini or openai)
DEFAULT_LLM_PROVIDER=gemini

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES (React App)
# =============================================================================
# These are used by the React frontend application
REACT_APP_AUTH0_DOMAIN=your-auth0-domain.auth0.com
REACT_APP_AUTH0_CLIENT_ID=your-auth0-client-id
REACT_APP_AUTH0_AUDIENCE=your-api-identifier
REACT_APP_API_URL=http://localhost:8000
